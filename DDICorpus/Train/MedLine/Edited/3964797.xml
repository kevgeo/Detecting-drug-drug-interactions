<document id="DDI-MedLine.d61">
    <sentence id="DDI-MedLine.d61.s0" text="Pharmacokinetic evaluation of the digoxin-amiodarone interaction.&#10;">
        <entity charOffset="34-40" id="DDI-MedLine.d61.s0.e0" text="digoxin" type="drug" />
        <entity charOffset="42-51" id="DDI-MedLine.d61.s0.e1" text="amiodarone" type="drug" />
        <pair ddi="false" e1="DDI-MedLine.d61.s0.e0" e2="DDI-MedLine.d61.s0.e1" id="DDI-MedLine.d61.s0.p0" />
    </sentence>
    <sentence id="DDI-MedLine.d61.s1" text="Amiodarone is known to raise serum digoxin levels. ">
        <entity charOffset="0-9" id="DDI-MedLine.d61.s1.e0" text="Amiodarone" type="drug" />
        <entity charOffset="35-41" id="DDI-MedLine.d61.s1.e1" text="digoxin" type="drug" />
        <pair ddi="true" e1="DDI-MedLine.d61.s1.e0" e2="DDI-MedLine.d61.s1.e1" id="DDI-MedLine.d61.s1.p0" type="mechanism" />
    </sentence>
    <sentence id="DDI-MedLine.d61.s4" text="During amiodarone administration, systemic clearance of digoxin was reduced from 234 +/- 72 ml/min (mean +/- standard deviation) to 172 +/- 33 ml/min (p less than 0.01). ">
        <entity charOffset="7-16" id="DDI-MedLine.d61.s4.e0" text="amiodarone" type="drug" />
        <entity charOffset="56-62" id="DDI-MedLine.d61.s4.e1" text="digoxin" type="drug" />
        <pair ddi="true" e1="DDI-MedLine.d61.s4.e0" e2="DDI-MedLine.d61.s4.e1" id="DDI-MedLine.d61.s4.p0" type="mechanism" />
    </sentence>
    <sentence id="DDI-MedLine.d61.s6" text="Digoxin half-life of elimination was prolonged from 34 +/- 13 to 40 +/- 16 hours (p less than 0.05). ">
        <entity charOffset="0-6" id="DDI-MedLine.d61.s6.e0" text="Digoxin" type="drug" />
    </sentence>
    <sentence id="DDI-MedLine.d61.s7" text="Digoxin volume of distribution was not significantly changed. ">
        <entity charOffset="0-6" id="DDI-MedLine.d61.s7.e0" text="Digoxin" type="drug" />
    </sentence>
    <sentence id="DDI-MedLine.d61.s8" text="Amiodarone caused a three- to fivefold increase in serum reverse triiodothyronine levels, but changes in thyroid function were not quantitatively related to the changes in digoxin pharmacokinetics. ">
        <entity charOffset="0-9" id="DDI-MedLine.d61.s8.e0" text="Amiodarone" type="drug" />
        <entity charOffset="172-178" id="DDI-MedLine.d61.s8.e1" text="digoxin" type="drug" />
        <pair ddi="false" e1="DDI-MedLine.d61.s8.e0" e2="DDI-MedLine.d61.s8.e1" id="DDI-MedLine.d61.s8.p0" />
    </sentence>
