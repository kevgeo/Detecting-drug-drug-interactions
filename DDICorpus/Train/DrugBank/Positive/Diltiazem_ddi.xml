    <sentence id="DDI-DrugBank.d565.s9" text="In vitro, propranolol appears to be displaced from its binding sites by diltiazem.">
        <entity charOffset="10-20" id="DDI-DrugBank.d565.s9.e0" text="propranolol" type="drug" />
        <entity charOffset="72-80" id="DDI-DrugBank.d565.s9.e1" text="diltiazem" type="drug" />
