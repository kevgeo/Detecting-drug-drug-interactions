    </sentence>
    <sentence id="DDI-DrugBank.d334.s14" text="Agents Increasing Serum Potassium: PRINIVIL attenuates potassium loss caused by thiazide-type diuretics.">
        <entity charOffset="35-42" id="DDI-DrugBank.d334.s14.e0" text="PRINIVIL" type="brand" />
        <entity charOffset="80-102" id="DDI-DrugBank.d334.s14.e1" text="thiazide-type diuretics" type="group" />
