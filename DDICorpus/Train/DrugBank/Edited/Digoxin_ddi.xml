    </sentence>
    <sentence id="DDI-DrugBank.d450.s10" text="Concomitant use of digoxin and sympathomimetics increases the risk of cardiac arrhythmias.">
        <entity charOffset="19-25" id="DDI-DrugBank.d450.s10.e0" text="digoxin" type="drug" />
        <entity charOffset="31-46" id="DDI-DrugBank.d450.s10.e1" text="sympathomimetics" type="group" />
